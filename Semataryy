-- Variables para la lista de jugadores
local PlayerListFrame
local PlayerListScrollFrame
local PlayerListConnections = {}

-- Función para crear un botón de jugador
local function createPlayerButton(player, parent)
    local playerInfo = getPlayerInfo(player)
    
    local PlayerButton = Instance.new("TextButton")
    PlayerButton.Size = UDim2.new(1, -10, 0, 40)
    PlayerButton.Position = UDim2.new(0, 5, 0, 0)
    PlayerButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    PlayerButton.BackgroundTransparency = 0.5
    PlayerButton.Text = ""
    PlayerButton.AutoButtonColor = false
    PlayerButton.Parent = parent
    
    local NameLabel = Instance.new("TextLabel")
    NameLabel.Size = UDim2.new(0.6, 0, 0.5, 0)
    NameLabel.Position = UDim2.new(0, 5, 0, 0)
    NameLabel.BackgroundTransparency = 1
    NameLabel.Text = playerInfo.Username
    NameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    NameLabel.TextXAlignment = Enum.TextXAlignment.Left
    NameLabel.Font = Enum.Font.Gotham
    NameLabel.TextSize = 12
    NameLabel.Parent = PlayerButton
    
    local DisplayLabel = Instance.new("TextLabel")
    DisplayLabel.Size = UDim2.new(0.6, 0, 0.5, 0)
    DisplayLabel.Position = UDim2.new(0, 5, 0.5, 0)
    DisplayLabel.BackgroundTransparency = 1
    DisplayLabel.Text = playerInfo.DisplayName .. " (" .. playerInfo.Skin .. ")"
    DisplayLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    DisplayLabel.TextXAlignment = Enum.TextXAlignment.Left
    DisplayLabel.Font = Enum.Font.Gotham
    DisplayLabel.TextSize = 10
    DisplayLabel.Parent = PlayerButton
    
    local SelectButton = Instance.new("TextButton")
    SelectButton.Size = UDim2.new(0.3, 0, 0.8, 0)
    SelectButton.Position = UDim2.new(0.7, 0, 0.1, 0)
    SelectButton.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
    SelectButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    SelectButton.Text = "Seleccionar"
    SelectButton.Font = Enum.Font.Gotham
    SelectButton.TextSize = 12
    SelectButton.Parent = PlayerButton
    
    SelectButton.MouseButton1Click:Connect(function()
        targetUsername = player.Name
        TargetLabel.Text = "Objetivo: " .. playerInfo.DisplayName
        PlayerListFrame.Visible = false
    end)
    
    return PlayerButton
end

-- Función para actualizar la lista de jugadores
local function updatePlayerList()
    -- Limpiar conexiones anteriores
    for _, connection in pairs(PlayerListConnections) do
        connection:Disconnect()
    end
    PlayerListConnections = {}
    
    -- Limpiar lista existente
    if PlayerListScrollFrame then
        PlayerListScrollFrame:ClearAllChildren()
    else
        -- Crear el marco de la lista de jugadores si no existe
        PlayerListFrame = Instance.new("Frame")
        PlayerListFrame.Size = UDim2.new(0.8, 0, 0.6, 0)
        PlayerListFrame.Position = UDim2.new(0.1, 0, 0.3, 0)
        PlayerListFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
        PlayerListFrame.BackgroundTransparency = 0.2
        PlayerListFrame.BorderSizePixel = 0
        PlayerListFrame.Visible = false
        PlayerListFrame.Parent = ContentContainer
        
        PlayerListScrollFrame = Instance.new("ScrollingFrame")
        PlayerListScrollFrame.Size = UDim2.new(1, 0, 1, 0)
        PlayerListScrollFrame.Position = UDim2.new(0, 0, 0, 0)
        PlayerListScrollFrame.BackgroundTransparency = 1
        PlayerListScrollFrame.BorderSizePixel = 0
        PlayerListScrollFrame.ScrollBarThickness = 5
        PlayerListScrollFrame.Parent = PlayerListFrame
        
        local UIListLayout = Instance.new("UIListLayout")
        UIListLayout.Padding = UDim.new(0, 5)
        UIListLayout.Parent = PlayerListScrollFrame
        
        -- Actualizar tamaño del scroll cuando cambia el layout
        UIListLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            PlayerListScrollFrame.CanvasSize = UDim2.new(0, 0, 0, UIListLayout.AbsoluteContentSize.Y)
        end)
    end
    
    -- Obtener y ordenar lista de jugadores
    local players = Players:GetPlayers()
    table.sort(players, function(a, b) return a.Name:lower() < b.Name:lower() end)
    
    -- Agregar jugadores a la lista
    for _, player in ipairs(players) do
        if player ~= LocalPlayer then
            createPlayerButton(player, PlayerListScrollFrame)
        end
    end
    
    -- Escuchar nuevos jugadores que se unan
    table.insert(PlayerListConnections, Players.PlayerAdded:Connect(function(player)
        task.wait() -- Esperar un frame para asegurar que el jugador esté completamente cargado
        if PlayerListScrollFrame and PlayerListFrame.Visible then
            createPlayerButton(player, PlayerListScrollFrame)
        end
    end))
    
    -- Escuchar jugadores que abandonen
    table.insert(PlayerListConnections, Players.PlayerRemoving:Connect(function(player)
        if PlayerListScrollFrame and PlayerListFrame.Visible then
            for _, child in ipairs(PlayerListScrollFrame:GetChildren()) do
                if child:IsA("TextButton") then
                    local nameLabel = child:FindFirstChildOfClass("TextLabel")
                    if nameLabel and nameLabel.Text == player.Name then
                        child:Destroy()
                        break
                    end
                end
            end
        end
    end))
end

-- Mostrar/ocultar lista de jugadores
SelectTargetButton.MouseButton1Click:Connect(function()
    if PlayerListFrame and PlayerListFrame.Visible then
        PlayerListFrame.Visible = false
    else
        updatePlayerList()
        PlayerListFrame.Visible = true
    end
end)

-- Funcionalidad del botón LOOP
LoopToggle.MouseButton1Click:Connect(function()
    isLooping = not isLooping
    if isLooping then
        LoopToggle.Text = "LOOP: ON"
        LoopToggle.BackgroundColor3 = Color3.fromRGB(0, 80, 0)
    else
        LoopToggle.Text = "LOOP: OFF"
        LoopToggle.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
    end
end)

-- Funcionalidad del botón INICIAR
StartButton.MouseButton1Click:Connect(function()
    if targetUsername == "" then
        StarterGui:SetCore("SendNotification", {
            Title = "ERROR",
            Text = "Selecciona un objetivo primero",
            Duration = 3
        })
        return
    end
    
    if isLooping then
        task.spawn(function()
            while isLooping do
                pcall(attackTarget)
                task.wait(1)
            end
        end)
    else
        pcall(attackTarget)
    end
end)

-- Funciones para mostrar/ocultar GUI
local function toggleGUI(visible)
    guiVisible = visible
    if visible then
        MainFrame.Visible = true
        OpenButton.Visible = false
        local tween = TweenService:Create(
            MainFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Quad),
            {Position = UDim2.new(0.5, -180, 0.5, -130)}
        )
        tween:Play()
    else
        if PlayerListFrame then PlayerListFrame.Visible = false end
        local tween = TweenService:Create(
            MainFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Quad),
            {Position = UDim2.new(0.5, -180, 1.5, 0)}
        )
        tween:Play()
        tween.Completed:Connect(function()
            MainFrame.Visible = false
            OpenButton.Visible = true
        end)
    end
end

CloseButton.MouseButton1Click:Connect(function()
    toggleGUI(false)
end)

MinimizeButton.MouseButton1Click:Connect(function()
    toggleGUI(false)
end)

OpenButton.MouseButton1Click:Connect(function()
    toggleGUI(true)
end)

-- Función para arrastrar la ventana
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if (input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement) then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Iniciar animación de los LEDs
startLEDAnimation()

-- Inicializar GUI
toggleGUI(true)
